{% extends '_base.html.twig' %}

{% block title %}recently added{% endblock %}

{% block body %}
    <h1>
        Recently added makers/studios
    </h1>

    {% if creators is empty %}
        <div class="alert alert-primary" role="alert">
            None have been added recently.
        </div>
    {% endif %}

    <ul>
        {% for creator in creators %}
            <li>
                <a href="{{ path('main', {_fragment: creator.lastCreatorId}) }}">{{ creator.name }}</a>
                {% if creator.formerly %}
                    <span class="text-body-secondary">
                        / {{ creator.formerly|join(' / ') }}
                    </span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>

    <h2>Want to be listed above?</h2>

    <a class="btn btn-success m-2" href="{{ path('iu_form_step_start') }}">
        Add your studio
    </a>
{% endblock %}
