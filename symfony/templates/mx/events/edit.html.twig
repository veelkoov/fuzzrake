{% extends '_base.html.twig' %}

{% block title %}{% if event.id is not null %}Edit: event #{{ event.id }}{% else %}New events{% endif %}{% endblock %}

{% block body %}
    <h1>{{ block('title') }}</h1>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.timestamp) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.type) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.creatorId) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.newCreatorsCount) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.updatedCreatorsCount) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.reportedUpdatedCreatorsCount) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.description) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.gitCommits) }}
            </div>
        </div>

        {{ form_row(form.save) }}
        {% if event.id is not null %}
            {{ form_row(form.delete) }}
        {% endif %}

        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
