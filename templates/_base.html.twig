<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>
        {%- if env_name != 'prod' %}
            {{ env_name|upper }}
        {% endif -%}

        getfursu.it - {% block title %}be true furry self{% endblock -%}
    </title>

    {% block add_meta %}{% endblock %}

    {% if noindex|default(false) %}
        <meta name="robots" content="noindex" />
    {% else %}
        <link rel="canonical" href="https://getfursu.it{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" />
    {% endif %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('general') }}
    {% endblock %}
</head>

<body>
    <div id="top-menu-container" hx-get="{{ path('htmx_menu') }}" hx-trigger="load" hx-on:htmx:after-on-load="jQuery(this).trigger('navbar-init');">
        {{ render(path('htmx_menu', {ignore_session: true})) }}
    </div>

    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} my-2" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </div>

    {{ include('_footer.html.twig') }}

    {% block javascripts %}
        {{ encore_entry_script_tags('general') }}
    {% endblock %}
</body>
</html>
