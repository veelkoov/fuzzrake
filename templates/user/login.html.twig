{% extends '_base.html.twig' %}

{% block title %}sign in{% endblock %} {# FIXME: Improve visuals #}

{% block body %}
    <h1 class="my-4">Sign in</h1>

    <a href="{{ path('user_register') }}">No account yet? Click here to register.</a>
    <a href="#" onclick="alert('TODO'); return void(0);">Forgotten password? Reset it here.</a> {# TODO #}

    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}
