{%- if artisan.country -%}
    <span class="flag-icon flag-icon-{{ artisan.country|lower }}"></span>&nbsp;
{%- endif -%}

{%- if artisan.inactiveReason -%}
    <span class="hidden" aria-hidden="true">~</span>{{ artisan.name ~ ' [inactive]' }}{# grep-inactive-mark #}
{%- else -%}
    {{ artisan.name }}
{%- endif %}

<span class="text-nowrap">
    {{- artisan|ages_for_table -}}

    {%- if artisan|is_new -%}
        &nbsp;<span class="new-artisan"><i class="fa-solid fa-leaf"></i> recently added</span>
    {%- endif -%}

    {%- if isDevOrTestEnv() -%}
        <small> ({{ artisan.id }})</small>
    {%- endif -%}
</span>
